[Unit]
Description=Traffic Cam Service
After=multi-user.target

[Service]
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority
Type=idle
ExecStart=/bin/bash /home/pi/traffic-cam/startup.sh > /home/pi/sample.log 2>&1
Restart=always
RestartSec=10s
KillMode=process
TimeoutSec=infinity

[Install]
WantedBy=graphical.target